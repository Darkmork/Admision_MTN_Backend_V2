{
  "info": {
    "name": "Sistema Admisión MTN - Preflight E2E",
    "description": "Colección de pruebas críticas para Fase 0 Pre-flight del Sistema de Admisión MTN",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{auth_token}}",
        "type": "string"
      }
    ]
  },
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Auto-login if no token present",
          "if (!pm.collectionVariables.get('auth_token')) {",
          "    console.log('No auth token found, will need to login first');",
          "}"
        ]
      }
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/actuator/health",
          "host": ["{{base_url}}"],
          "path": ["actuator", "health"]
        },
        "description": "Verificar que la aplicación está funcionando"
      },
      "response": []
    },
    {
      "name": "b1) Login Admin",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Login successful', function () {",
              "    pm.response.to.have.status(200);",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('token');",
              "    pm.expect(jsonData.user.role).to.eql('ADMIN');",
              "    pm.collectionVariables.set('auth_token', jsonData.token);",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"email\": \"{{admin_email}}\",\n    \"password\": \"{{admin_password}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/login",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "login"]
        }
      }
    },
    {
      "name": "b1) Login Apoderado",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Apoderado login successful', function () {",
              "    pm.response.to.have.status(200);",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('token');",
              "    pm.expect(jsonData.user.role).to.eql('APODERADO');",
              "    pm.collectionVariables.set('apoderado_token', jsonData.token);",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"email\": \"{{apoderado_email}}\",\n    \"password\": \"{{apoderado_password}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/login",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "login"]
        }
      }
    },
    {
      "name": "b2) Crear Postulación",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Application created successfully', function () {",
              "    pm.response.to.have.status(201);",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('id');",
              "    pm.expect(jsonData.status).to.eql('PENDING');",
              "    pm.collectionVariables.set('application_id', jsonData.id);",
              "});"
            ]
          }
        }
      ],
      "request": {
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{apoderado_token}}",
              "type": "string"
            }
          ]
        },
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"student\": {\n        \"firstName\": \"Juan Carlos\",\n        \"lastName\": \"Pérez López\",\n        \"rut\": \"20123456-7\",\n        \"birthDate\": \"2015-03-15\",\n        \"grade\": \"KINDER\",\n        \"previousSchool\": \"Jardín Los Pequeños\",\n        \"hasSpecialNeeds\": false\n    },\n    \"father\": {\n        \"firstName\": \"Carlos\",\n        \"lastName\": \"Pérez\",\n        \"rut\": \"12345678-9\",\n        \"email\": \"carlos.perez@test.com\",\n        \"phone\": \"+56912345678\",\n        \"occupation\": \"Ingeniero\"\n    },\n    \"mother\": {\n        \"firstName\": \"María\",\n        \"lastName\": \"López\",\n        \"rut\": \"98765432-1\",\n        \"email\": \"maria.lopez@test.com\",\n        \"phone\": \"+56987654321\",\n        \"occupation\": \"Profesora\"\n    },\n    \"guardian\": {\n        \"firstName\": \"María\",\n        \"lastName\": \"López\",\n        \"rut\": \"98765432-1\",\n        \"relationship\": \"MOTHER\",\n        \"email\": \"maria.lopez@test.com\",\n        \"phone\": \"+56987654321\",\n        \"address\": \"Av. Providencia 1234, Santiago\"\n    },\n    \"supporter\": {\n        \"firstName\": \"Carlos\",\n        \"lastName\": \"Pérez\",\n        \"rut\": \"12345678-9\",\n        \"relationship\": \"FATHER\",\n        \"income\": 2500000\n    },\n    \"targetSchool\": \"MONTE_TABOR\",\n    \"comments\": \"Postulación de prueba Postman\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/applications",
          "host": ["{{base_url}}"],
          "path": ["api", "applications"]
        }
      }
    },
    {
      "name": "b2) Obtener Postulación",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Application retrieved successfully', function () {",
              "    pm.response.to.have.status(200);",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.id).to.eql(pm.collectionVariables.get('application_id'));",
              "    pm.expect(jsonData.student.firstName).to.eql('Juan Carlos');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{apoderado_token}}",
              "type": "string"
            }
          ]
        },
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/api/applications/{{application_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "applications", "{{application_id}}"]
        }
      }
    },
    {
      "name": "b3) Obtener Tipos de Documentos",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Document types retrieved', function () {",
              "    pm.response.to.have.status(200);",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.be.an('array');",
              "    pm.expect(jsonData.length).to.be.above(0);",
              "});"
            ]
          }
        }
      ],
      "request": {
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{apoderado_token}}",
              "type": "string"
            }
          ]
        },
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/api/documents/types",
          "host": ["{{base_url}}"],
          "path": ["api", "documents", "types"]
        }
      }
    },
    {
      "name": "b4) Enviar Email Básico",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Email sent successfully', function () {",
              "    pm.response.to.have.status(200);",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.message).to.include('enviado');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{auth_token}}",
              "type": "string"
            }
          ]
        },
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"to\": \"test@example.com\",\n    \"subject\": \"Prueba Postman - Email básico\",\n    \"content\": \"Este es un email de prueba enviado desde la colección Postman del sistema de admisión MTN.\",\n    \"type\": \"TEXT\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/emails/send",
          "host": ["{{base_url}}"],
          "path": ["api", "emails", "send"]
        }
      }
    },
    {
      "name": "b4) Estado Sistema Email",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Email system status retrieved', function () {",
              "    pm.response.to.have.status(200);",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('emailSystemActive');",
              "    pm.expect(jsonData).to.have.property('mockMode');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{auth_token}}",
              "type": "string"
            }
          ]
        },
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/api/admin/email-management/status",
          "host": ["{{base_url}}"],
          "path": ["api", "admin", "email-management", "status"]
        }
      }
    },
    {
      "name": "Admin - Cambiar Estado Postulación",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('Application status updated', function () {",
              "    pm.response.to.have.status(200);",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData.status).to.eql('UNDER_REVIEW');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{auth_token}}",
              "type": "string"
            }
          ]
        },
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"status\": \"UNDER_REVIEW\",\n    \"comments\": \"Postulación pasada a revisión desde Postman\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/applications/{{application_id}}/status",
          "host": ["{{base_url}}"],
          "path": ["api", "applications", "{{application_id}}", "status"]
        }
      }
    },
    {
      "name": "Admin - Estadísticas Sistema",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('System statistics retrieved', function () {",
              "    pm.response.to.have.status(200);",
              "    const jsonData = pm.response.json();",
              "    pm.expect(jsonData).to.have.property('totalApplications');",
              "    pm.expect(jsonData.totalApplications).to.be.a('number');",
              "});"
            ]
          }
        }
      ],
      "request": {
        "auth": {
          "type": "bearer",
          "bearer": [
            {
              "key": "token",
              "value": "{{auth_token}}",
              "type": "string"
            }
          ]
        },
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/api/applications/statistics",
          "host": ["{{base_url}}"],
          "path": ["api", "applications", "statistics"]
        }
      }
    }
  ],
