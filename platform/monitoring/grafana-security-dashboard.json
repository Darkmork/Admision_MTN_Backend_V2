{
  "dashboard": {
    "id": null,
    "title": "MTN Admission - Security Overview",
    "tags": ["security", "mtn", "admission", "chile"],
    "timezone": "America/Santiago",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "üö® Security Status Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"api-gateway\"} * 100",
            "legendFormat": "API Gateway",
            "refId": "A"
          },
          {
            "expr": "vault_core_unsealed * 100",
            "legendFormat": "Vault Status",
            "refId": "B"
          },
          {
            "expr": "sum(istio_requests_total{security_policy=\"mutual_tls\"}) / sum(istio_requests_total) * 100",
            "legendFormat": "mTLS Coverage",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 80},
                {"color": "green", "value": 95}
              ]
            },
            "unit": "percent"
          }
        },
        "options": {
          "colorMode": "background",
          "orientation": "horizontal"
        },
        "gridPos": {"h": 4, "w": 24, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "üîê Authentication Failures (Last 5 minutes)",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(gateway_authentication_failures_total[5m])",
            "legendFormat": "Auth Failures/min - {{source_ip}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Failures per minute",
            "min": 0
          }
        ],
        "alert": {
          "conditions": [
            {
              "query": {"params": ["A", "5m", "now"]},
              "reducer": {"params": [], "type": "avg"},
              "evaluator": {"params": [10], "type": "gt"}
            }
          ],
          "executionErrorState": "alerting",
          "noDataState": "no_data",
          "frequency": "10s",
          "handler": 1,
          "name": "Authentication Failure Spike",
          "message": "üö® ALERTA: Alto n√∫mero de fallos de autenticaci√≥n detectado. Posible ataque de fuerza bruta.",
          "alertRuleTags": {
            "severity": "warning",
            "team": "security",
            "compliance": "chilean-banking"
          }
        },
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 4}
      },
      {
        "id": 3,
        "title": "‚ö° Rate Limiting Events",
        "type": "graph", 
        "targets": [
          {
            "expr": "rate(gateway_rate_limit_exceeded_total[5m])",
            "legendFormat": "Rate Limit Exceeded - {{endpoint}}",
            "refId": "A"
          },
          {
            "expr": "rate(gateway_suspicious_activity_total[5m])",
            "legendFormat": "Suspicious Activity - {{source_ip}}",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Events per minute",
            "min": 0
          }
        ],
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 4}
      },
      {
        "id": 4,
        "title": "üîí JWT Token Security",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(spring_security_authentication_failures_total{reason=\"invalid_jwt\"}[5m])",
            "legendFormat": "Invalid JWT Tokens - {{service}}",
            "refId": "A"
          },
          {
            "expr": "rate(spring_security_authentication_failures_total{reason=\"expired_jwt\"}[5m])",
            "legendFormat": "Expired JWT Tokens - {{service}}",
            "refId": "B"
          }
        ],
        "gridPos": {"h": 6, "w": 8, "x": 0, "y": 10}
      },
      {
        "id": 5,
        "title": "üèõÔ∏è Vault Health & Secret Rotation",
        "type": "graph",
        "targets": [
          {
            "expr": "vault_core_unsealed",
            "legendFormat": "Vault Unsealed Status",
            "refId": "A"
          },
          {
            "expr": "(time() - vault_database_credential_last_rotation_timestamp) / 3600",
            "legendFormat": "Hours since DB credential rotation",
            "refId": "B"
          },
          {
            "expr": "external_secrets_operator_reconcile_errors_total",
            "legendFormat": "ESO Errors - {{secret_name}}",
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "label": "Status / Hours",
            "min": 0
          }
        ],
        "gridPos": {"h": 6, "w": 8, "x": 8, "y": 10}
      },
      {
        "id": 6,
        "title": "üåê mTLS Certificate Status",
        "type": "graph",
        "targets": [
          {
            "expr": "(istio_certificate_expiration_timestamp - time()) / 86400",
            "legendFormat": "Days until expiry - {{service}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Days",
            "min": 0
          }
        ],
        "thresholds": [
          {"value": 7, "color": "yellow"},
          {"value": 3, "color": "red"}
        ],
        "gridPos": {"h": 6, "w": 8, "x": 16, "y": 10}
      },
      {
        "id": 7,
        "title": "üá®üá± Chilean Compliance Metrics",
        "type": "table",
        "targets": [
          {
            "expr": "application_pii_unencrypted_access_total",
            "legendFormat": "",
            "refId": "A",
            "instant": true
          },
          {
            "expr": "application_rut_access_unauthorized_total", 
            "legendFormat": "",
            "refId": "B",
            "instant": true
          },
          {
            "expr": "application_timezone_violation_total",
            "legendFormat": "",
            "refId": "C", 
            "instant": true
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "renameByName": {
                "Value #A": "Accesos PII No Cifrados",
                "Value #B": "Accesos RUT No Autorizados", 
                "Value #C": "Violaciones Zona Horaria"
              }
            }
          }
        ],
        "fieldConfig": {
          "overrides": [
            {
              "matcher": {"id": "byName", "options": "Accesos PII No Cifrados"},
              "properties": [
                {
                  "id": "color",
                  "value": {"mode": "thresholds"}
                },
                {
                  "id": "thresholds",
                  "value": {
                    "steps": [
                      {"color": "green", "value": 0},
                      {"color": "red", "value": 0.1}
                    ]
                  }
                }
              ]
            }
          ]
        },
        "gridPos": {"h": 6, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 8,
        "title": "üîç Top Security Events (Last Hour)",
        "type": "logs",
        "targets": [
          {
            "expr": "{job=\"api-gateway\"} |~ \"SECURITY_AUDIT\"",
            "refId": "A"
          }
        ],
        "options": {
          "showTime": true,
          "showLabels": true,
          "sortOrder": "Descending"
        },
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 9,
        "title": "üìä Security Metrics Summary",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(gateway_authentication_failures_total[1h]))",
            "legendFormat": "Auth Failures (1h)",
            "refId": "A"
          },
          {
            "expr": "sum(rate(gateway_rate_limit_exceeded_total[1h]))",
            "legendFormat": "Rate Limits (1h)",
            "refId": "B"  
          },
          {
            "expr": "sum(gateway_suspicious_activity_total)",
            "legendFormat": "Suspicious Events",
            "refId": "C"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "green", "value": 0},
                {"color": "yellow", "value": 10},
                {"color": "red", "value": 50}
              ]
            }
          }
        },
        "gridPos": {"h": 4, "w": 24, "x": 0, "y": 22}
      }
    ],
    "templating": {
      "list": [
        {
          "name": "namespace",
          "type": "query",
          "query": "label_values(up, namespace)",
          "multi": false,
          "current": {
            "selected": true,
            "text": "admissions",
            "value": "admissions"
          }
        },
        {
          "name": "service",
          "type": "query", 
          "query": "label_values(up{namespace=\"$namespace\"}, service)",
          "multi": true,
          "current": {
            "selected": true,
            "text": "All",
            "value": "$__all"
          }
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Security Incidents",
          "enable": true,
          "iconColor": "red",
          "datasource": "Prometheus",
          "expr": "ALERTS{alertname=~\".*Security.*|.*Authentication.*|.*Unauthorized.*\"}",
          "titleFormat": "üö® {{alertname}}",
          "textFormat": "{{summary}} - {{description}}"
        },
        {
          "name": "Deployments", 
          "enable": true,
          "iconColor": "blue",
          "datasource": "Prometheus",
          "expr": "kube_deployment_status_replicas{namespace=\"admissions\"}",
          "titleFormat": "üöÄ Deployment: {{deployment}}",
          "textFormat": "Service deployment in {{namespace}}"
        }
      ]
    },
    "links": [
      {
        "title": "üö® Security Runbooks",
        "url": "https://runbooks.mtn.cl/security/",
        "type": "link",
        "icon": "external link",
        "tags": ["security", "runbooks"]
      },
      {
        "title": "üèõÔ∏è Vault UI",
        "url": "https://vault.mtn.cl:8200",
        "type": "link", 
        "icon": "external link",
        "tags": ["vault", "secrets"]
      },
      {
        "title": "‚ò∏Ô∏è Istio Security",
        "url": "/d/istio-security-overview",
        "type": "dashboards",
        "icon": "dashboard",
        "tags": ["istio", "mtls"]
      }
    ],
    "editable": false,
    "hideControls": false,
    "style": "dark",
    "version": 1
  }
}