            "values": false,
            "calcs": ["lastNotNull"],
            "fields": ""
          },
          "textMode": "auto",
          "colorMode": "background"
        }
      }
    ],
    "refresh": "30s",
    "schemaVersion": 39,
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": [
        "30s",
        "1m",
        "2m",
        "5m",
        "15m",
        "30m",
        "1h"
      ]
    },
    "templating": {
      "list": [
        {
          "current": {
            "selected": true,
            "text": ["All"],
            "value": ["$__all"]
          },
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus-uid"
          },
          "definition": "label_values(http_server_requests_total, app)",
          "hide": 0,
          "includeAll": true,
          "multi": true,
          "name": "app",
          "options": [],
          "query": {
            "query": "label_values(http_server_requests_total, app)",
            "refId": "StandardVariableQuery"
          },
          "refresh": 1,
          "regex": "",
          "skipUrlSync": false,
          "sort": 1,
          "type": "query"
        }
      ]
    },
    "version": 1,
    "weekStart": ""
  }
}