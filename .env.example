# Database Configuration - PostgreSQL
# üîí PRODUCTION: Use managed database service with strong passwords
DB_HOST=localhost
DB_PORT=5432
DB_NAME=Admisi√≥n_MTN_DB
DB_USERNAME=your_db_username
DB_PASSWORD=your_secure_db_password

# JWT Configuration - Authentication & Authorization  
# üîí CRITICAL: Generate secure random secrets (256+ bits)
# Example generation: openssl rand -base64 64
JWT_SECRET=your_secure_jwt_secret_min_256_bits_base64_encoded
JWT_EXPIRATION_TIME=86400000

# Email Configuration - SMTP
# üîí Use institutional email or professional SMTP service
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USERNAME=admision@your-institution.edu
SMTP_PASSWORD=your_smtp_app_password_or_api_key
SMTP_AUTH=true
SMTP_STARTTLS=true

# Institutional Email Configuration
INSTITUTIONAL_EMAIL_FROM_NAME="Your Institution - Admission System"
INSTITUTIONAL_EMAIL_REPLY_TO=admision@your-institution.edu
INSTITUTIONAL_EMAIL_SUPPORT=soporte@your-institution.edu
INSTITUTIONAL_WEBSITE=www.your-institution.edu
INSTITUTIONAL_PHONE="+1 234 567 8900"

# Email Rate Limiting (adjust based on your SMTP plan)
MAX_EMAILS_PER_HOUR=50
MAX_EMAILS_PER_DAY=200
MAX_EMAILS_PER_MONTH=5000

# Email Retry Configuration
EMAIL_RETRY_ATTEMPTS=4
EMAIL_RETRY_DELAY_MINUTES=5
EMAIL_QUEUE_MAX_SIZE=100

# Admin User Configuration
# üîí PRODUCTION: Use strong password and secure hash generation
ADMIN_EMAIL=admin@your-institution.edu
ADMIN_PASSWORD_HASH=bcrypt_hashed_password_here

# File Upload Configuration
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=50MB
UPLOAD_PATH=./uploads

# CORS Configuration - Web Security
# üîí CRITICAL: Only allow trusted domains in production
# DEVELOPMENT EXAMPLE:
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173
# PRODUCTION EXAMPLE:
# ALLOWED_ORIGINS=https://admision.your-institution.edu,https://www.your-institution.edu

# Application Server Configuration
SERVER_PORT=8080
CONTEXT_PATH=/

# Security Configuration
SECURITY_HEADERS_ENABLED=true

# Environment Profile
# üîí PRODUCTION: Change to 'production' for live deployment
SPRING_PROFILES_ACTIVE=development

